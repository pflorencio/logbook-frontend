entrypoint = "index.js"
modules = ["nodejs-20"]

[env]
PORT = "3000"

# Run preview (NOT dev) for deployment
run = "npm run preview"

[nix]
channel = "stable-24_05"

# Map external port 80 â†’ internal port 3000
